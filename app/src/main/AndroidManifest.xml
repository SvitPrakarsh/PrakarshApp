<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.svit.prakarsh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TeamCategoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".EventsSubcategoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TeamInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".EventInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SponsorsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".TransportationActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>